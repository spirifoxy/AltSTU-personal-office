<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tolichp.spirifoxy.altstu_personal_office.AttestationT"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <!-- TODO: Update blank fragment layout -->

    <Spinner
        android:id="@+id/spinner_discipline"
        android:layout_width="258dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView_discipline"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Spinner
        android:id="@+id/spinner_group"
        android:layout_width="259dp"
        android:layout_height="29dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView_group"
        app:layout_constraintTop_toBottomOf="@+id/spinner_discipline" />

    <TextView
        android:id="@+id/textView_group"
        android:layout_width="89dp"
        android:layout_height="29dp"
        android:text="Группа"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_discipline"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView_discipline"
        android:layout_width="89dp"
        android:layout_height="29dp"
        android:text="Дисциплина"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="№"
        app:layout_constraintRight_toLeftOf="@+id/textView_fio"
        android:layout_marginRight="23dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_group" />

    <TextView
        android:id="@+id/textView_fio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ФИО"
        tools:layout_editor_absoluteX="55dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_group" />

    <TextView
        android:id="@+id/textView_attestation2"
        android:layout_width="109dp"
        android:layout_height="32dp"
        android:layout_marginRight="16dp"
        android:text="Аттестация/Посещаемость 2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner_group"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/textView_attestation1"
        android:layout_width="109dp"
        android:layout_height="32dp"
        android:text="Аттестация/Посещаемость 1"
        app:layout_constraintRight_toLeftOf="@+id/textView_attestation2"
        app:layout_constraintLeft_toRightOf="@+id/textView_fio"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner_group"
        app:layout_constraintHorizontal_bias="0.507" />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Подтвердить"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="129dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_students"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="161dp"
        android:layout_marginStart="8dp" />

</android.support.constraint.ConstraintLayout>
